{
  "name": "what-the-code",
  "displayName": "What-The-Code",
  "description": "A VSCode extension that lets you search your codebase using natural language powered by Google Gemini AI, like asking \"Where is user authentication handled?\" or \"Show me all useEffect hooks.\"",
  "version": "0.0.1",
  "engines": {
    "vscode": "^1.101.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "onStartupFinished"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "what-the-code.searchCode",
        "title": "üîç Ask Your Code",
        "category": "What-The-Code",
        "icon": "$(search)"
      },
      {
        "command": "what-the-code.testExtension",
        "title": "Test Extension",
        "category": "What-The-Code",
        "icon": "$(beaker)"
      },
      {
        "command": "what-the-code.testGemini",
        "title": "üîå Test Gemini Connection",
        "category": "What-The-Code",
        "icon": "$(plug)"
      },
      {
        "command": "what-the-code.openSettings",
        "title": "‚öôÔ∏è Configure Settings",
        "category": "What-The-Code",
        "icon": "$(settings-gear)"
      },
      {
        "command": "what-the-code.openResult",
        "title": "Open Search Result",
        "category": "What-The-Code",
        "icon": "$(go-to-file)"
      },
      {
        "command": "what-the-code.clearResults",
        "title": "Clear Search Results",
        "category": "What-The-Code",
        "icon": "$(clear-all)"
      },
      {
        "command": "what-the-code.saveSnapshot",
        "title": "üìå Save Snapshot",
        "category": "What-The-Code",
        "icon": "$(save)"
      },
      {
        "command": "what-the-code.openSnapshot",
        "title": "Open Snapshot",
        "category": "What-The-Code",
        "icon": "$(file-code)"
      },
      {
        "command": "what-the-code.restoreSnapshot",
        "title": "üîÑ Restore Snapshot",
        "category": "What-The-Code",
        "icon": "$(debug-restart)"
      },
      {
        "command": "what-the-code.deleteSnapshot",
        "title": "Delete Snapshot",
        "category": "What-The-Code",
        "icon": "$(trash)"
      },
      {
        "command": "what-the-code.clearAllSnapshots",
        "title": "Clear All Snapshots",
        "category": "What-The-Code",
        "icon": "$(clear-all)"
      },
      {
        "command": "what-the-code.findDeadCode",
        "title": "üßπ Find Dead Code",
        "category": "What-The-Code",
        "icon": "$(search-remove)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "what-the-code",
          "title": "What-The-Code",
          "icon": "media/search.svg"
        }
      ]
    },
    "views": {
      "what-the-code": [
        {
          "id": "what-the-code-main-actions",
          "name": "üöÄ Main Actions",
          "when": "true",
          "icon": "$(rocket)"
        },
        {
          "id": "what-the-code-results",
          "name": "üîç Search Results",
          "when": "true",
          "icon": "$(search-view-icon)"
        },
        {
          "id": "what-the-code-snapshots",
          "name": "üì∏ Code Snapshots",
          "when": "true",
          "icon": "$(save-all)"
        },
        {
          "id": "what-the-code-dead-code",
          "name": "üßπ Dead Code Analysis",
          "when": "true",
          "icon": "$(search-remove)"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "what-the-code.searchCode",
          "when": "view == what-the-code-main-actions",
          "group": "navigation@1",
          "icon": "$(search)"
        },
        {
          "command": "what-the-code.saveSnapshot",
          "when": "view == what-the-code-main-actions",
          "group": "navigation@2",
          "icon": "$(save)"
        },
        {
          "command": "what-the-code.testGemini",
          "when": "view == what-the-code-main-actions",
          "group": "navigation@3",
          "icon": "$(plug)"
        },
        {
          "command": "what-the-code.openSettings",
          "when": "view == what-the-code-main-actions",
          "group": "navigation@4",
          "icon": "$(settings-gear)"
        },
        {
          "command": "what-the-code.clearResults",
          "when": "view == what-the-code-results",
          "group": "navigation",
          "icon": "$(clear-all)"
        },
        {
          "command": "what-the-code.saveSnapshot",
          "when": "view == what-the-code-snapshots",
          "group": "navigation@1",
          "icon": "$(save)"
        },
        {
          "command": "what-the-code.clearAllSnapshots",
          "when": "view == what-the-code-snapshots",
          "group": "navigation@2",
          "icon": "$(clear-all)"
        },
        {
          "command": "what-the-code.findDeadCode",
          "when": "view == what-the-code-dead-code",
          "group": "navigation@1",
          "icon": "$(search-remove)"
        }
      ],
      "view/item/context": [
        {
          "command": "what-the-code.restoreSnapshot",
          "when": "view == what-the-code-snapshots && viewItem == snapshot",
          "group": "inline@1",
          "icon": "$(debug-restart)"
        },
        {
          "command": "what-the-code.deleteSnapshot",
          "when": "view == what-the-code-snapshots && viewItem == snapshot",
          "group": "inline@2",
          "icon": "$(trash)"
        }
      ]
    },
    "keybindings": [
      {
        "command": "what-the-code.searchCode",
        "key": "ctrl+shift+alt+k",
        "mac": "cmd+shift+alt+k"
      }
    ],
    "configuration": {
      "title": "What-The-Code",
      "properties": {
        "whatTheCode.geminiApiKey": {
          "type": "string",
          "default": "",
          "description": "Gemini API key (get from https://aistudio.google.com/app/apikey)"
        },
        "whatTheCode.geminiModel": {
          "type": "string",
          "default": "gemini-1.5-flash",
          "description": "Gemini model to use for code analysis",
          "enum": [
            "gemini-1.5-flash",
            "gemini-1.5-pro",
            "gemini-pro"
          ],
          "enumDescriptions": [
            "Fast and efficient",
            "Most capable",
            "Legacy model"
          ]
        },
        "whatTheCode.maxFileSize": {
          "type": "number",
          "default": 50000,
          "description": "Maximum file size (in characters) to include in search"
        },
        "whatTheCode.includedExtensions": {
          "type": "array",
          "default": [
            ".js",
            ".ts",
            ".jsx",
            ".tsx",
            ".py",
            ".java",
            ".cs",
            ".cpp",
            ".c",
            ".h",
            ".go",
            ".rs",
            ".php",
            ".rb",
            ".vue",
            ".svelte"
          ],
          "description": "File extensions to include in code search"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.10",
    "@types/node": "20.x",
    "@types/vscode": "^1.101.0",
    "@typescript-eslint/eslint-plugin": "^8.31.1",
    "@typescript-eslint/parser": "^8.31.1",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.5.2",
    "eslint": "^9.25.1",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "ts-morph": "^26.0.0"
  }
}
